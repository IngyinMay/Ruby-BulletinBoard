<div class="pt-5">
  <h1 class="text-center">Change Password</h1>
  <div class="row">
    <div class = "card col-md-5 mx-auto round_corner">
      <div class="card-body">
        <%= form_with url: password_path, method: :put do |form| %>
          <div class="form-group">
            <%= form.label :password, class: "d-flex flex-row align-items-center required" %>
            <%= form.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, "Confirm Password", class: "d-flex flex-row align-items-center required" %>
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <div class="submit-btn-div">
            <%= form.submit class: "btn create-btn pull-right" %>
            <%= link_to 'Cancel', profile_path , class:"btn cancel-btn pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>