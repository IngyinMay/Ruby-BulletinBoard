<%= form_with model: user, url: url, method: method do |form| %>
  <div class="form-group">
    <%= form.label :user_name, "User Name", class: "required" %><br>
    <%= form.text_field :name, class: "form-control" %>
    <% if user.errors[:name].any? %>
      <div class="error-msg">Name <%= user.errors[:name][0] %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "required" %><br>
    <%= form.text_field :email, class: "form-control" %>
    <% if user.errors[:email].any? %>
      <div class="error-msg">Email <%= user.errors[:email][0] %></div>
    <% end %>
  </div>
  <% if user.id == nil %>
    <div class="form-group">
      <%= form.label :password, class: "required" %><br>
      <%= form.password_field :password, class: "form-control" %>
      <% if user.errors[:password].any? %>
        <div class="error-msg">Password <%= user.errors[:password][0] %></div>
      <% end %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, "Confirm Password", class: "required" %><br>
      <%= form.password_field :password_confirmation, class: "form-control" %>
      <% if user.errors[:password_confirmation].any? %>
        <div class="error-msg">Confirm Password <%= user.errors[:password_confirmation][0] %></div>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :phone %><br>
    <%= form.text_field :phone, class: "form-control" %>
    <% if user.errors[:phone].any? %>
      <div class="error-msg">Phone <%= user.errors[:phone][0] %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :address %><br>
    <%= form.text_field :address, class: "form-control" %>
    <% if user.errors[:address].any? %>
      <div class="error-msg">Address <%= user.errors[:address][0] %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :birthday %><br>
    <%= form.date_field :birthday, class: "form-control" %>
    <% if user.errors[:birthday].any? %>
      <div class="error-msg">Birthday <%= user.errors[:birthday][0] %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :super_user_flag, "Create as", class: "required" %><br />
    <%= form.radio_button :super_user_flag, true, class: "super-user-flag" %>
    <%= form.label :super_user_flag, "Admin", :value => "true" %><br>
    <%= form.radio_button :super_user_flag, false, class: "super-user-flag" %>
    <%= form.label :super_user_flag, "User", :value => "false" %>
    <% if user.errors[:super_user_flag].any? %>
      <div class="error-msg">User Type <%= user.errors[:super_user_flag][0] %></div>
    <% end %>
  </div>
  <div class="form-group user-role" hidden>
    <%= form.label :role, "Role" %><br />
    <%= form.select(:role, options_for_select(Constants::USER_ROLES), {}, {:class => "form-control col-sm-5"})%>
  </div>
  <div class="submit-btn-div">
    <%= form.submit class: "btn create-btn pull-right" %>
    <%= link_to 'Cancel', back , class:"btn cancel-btn pull-right" %>
  </div>
  <%= javascript_pack_tag 'users/_form' %>
<% end %>